/* app.wxss - 全局样式 */

/* 基础样式重置 */
page {
  background-color: #f8f8f8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  /* 确保页面可以滚动 */
  height: 100%;
  overflow-y: auto;
}

/* 容器样式 */
.container {
  padding: 32rpx;
  box-sizing: border-box;
  /* 移除 min-height 限制，允许内容自然扩展 */
}

/* 卡片样式 */
.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 按钮样式 */
.btn {
  display: inline-block;
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
}

.btn-primary {
  background: #007aff;
  color: #fff;
}

.btn-primary:hover {
  background: #0056cc;
}

.btn-secondary {
  background: #f0f0f0;
  color: #333;
}

.btn-secondary:hover {
  background: #e0e0e0;
}

.btn-success {
  background: #34c759;
  color: #fff;
}

.btn-success:hover {
  background: #28a745;
}

.btn-danger {
  background: #ff3b30;
  color: #fff;
}

.btn-danger:hover {
  background: #dc3545;
}

/* 文本样式 */
.text-primary {
  color: #007aff;
}

.text-success {
  color: #34c759;
}

.text-warning {
  color: #ff9500;
}

.text-danger {
  color: #ff3b30;
}

.text-muted {
  color: #8e8e93;
}

.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}

/* 布局样式 */
.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-center {
  justify-content: center;
  align-items: center;
}

.flex-between {
  justify-content: space-between;
}

.flex-around {
  justify-content: space-around;
}

.flex-1 {
  flex: 1;
}

/* 间距样式 */
.mt-16 { margin-top: 16rpx; }
.mt-24 { margin-top: 24rpx; }
.mt-32 { margin-top: 32rpx; }
.mb-16 { margin-bottom: 16rpx; }
.mb-24 { margin-bottom: 24rpx; }
.mb-32 { margin-bottom: 32rpx; }
.ml-16 { margin-left: 16rpx; }
.mr-16 { margin-right: 16rpx; }
.p-16 { padding: 16rpx; }
.p-24 { padding: 24rpx; }
.p-32 { padding: 32rpx; }

/* 标题样式 */
.title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  color: #333;
}

.subtitle {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
  color: #666;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background: #e5e5e5;
  margin: 24rpx 0;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: #8e8e93;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #8e8e93;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .container {
    padding: 24rpx;
  }
  
  .card {
    padding: 24rpx;
  }
  
  .title {
    font-size: 32rpx;
  }
  
  .subtitle {
    font-size: 28rpx;
  }
} 
