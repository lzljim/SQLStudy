/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 头部区域 */
.header {
  padding: 80rpx 32rpx 60rpx;
  text-align: center;
  color: #fff;
}

.app-title {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.title-icon {
  font-size: 48rpx;
  margin-right: 16rpx;
}

.title-text {
  font-size: 48rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
}

.app-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  line-height: 1.5;
}

/* 统计卡片 */
.stats-card {
  margin: 0 32rpx 40rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.stats-grid {
  display: flex;
  justify-content: space-around;
  padding: 32rpx 0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.stat-number {
  font-size: 36rpx;
  font-weight: 700;
  color: #007aff;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #6c757d;
}

/* 功能区域 */
.features-section {
  padding: 0 32rpx 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 24rpx;
  text-align: center;
}

.feature-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.feature-card {
  display: flex;
  align-items: center;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.feature-card:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.98);
}

.feature-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.feature-icon .icon {
  font-size: 36rpx;
}

.feature-content {
  flex: 1;
}

.feature-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.feature-desc {
  display: block;
  font-size: 26rpx;
  color: #6c757d;
  line-height: 1.4;
}

.feature-arrow {
  margin-left: 16rpx;
}

.arrow-icon {
  font-size: 32rpx;
  color: #007aff;
  font-weight: 600;
}

/* 快速开始区域 */
.quick-start-section {
  padding: 0 32rpx 40rpx;
}

.quick-start-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.quick-start-header {
  text-align: center;
  margin-bottom: 32rpx;
}

.quick-start-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.quick-start-desc {
  display: block;
  font-size: 26rpx;
  color: #6c757d;
}

.examples-list {
  margin-bottom: 32rpx;
}

.example-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  transition: all 0.2s ease;
}

.example-item:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.example-sql {
  font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
  font-size: 26rpx;
  color: #495057;
  flex: 1;
}

.copy-icon {
  font-size: 24rpx;
  color: #007aff;
  margin-left: 16rpx;
}

.quick-start-btn {
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 600;
  background: linear-gradient(135deg, #007aff 0%, #0056cc 100%);
  border: none;
  border-radius: 12rpx;
  color: #fff;
  transition: all 0.3s ease;
}

.quick-start-btn:active {
  transform: scale(0.98);
  background: linear-gradient(135deg, #0056cc 0%, #004085 100%);
}

.btn-icon {
  margin-right: 12rpx;
  font-size: 28rpx;
}

/* 底部 */
.footer {
  padding: 40rpx 32rpx 60rpx;
  text-align: center;
}

.footer-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.5;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .header {
    padding: 60rpx 24rpx 40rpx;
  }
  
  .title-text {
    font-size: 40rpx;
  }
  
  .stats-card,
  .feature-card,
  .quick-start-card {
    margin-left: 24rpx;
    margin-right: 24rpx;
  }
  
  .features-section,
  .quick-start-section {
    padding-left: 24rpx;
    padding-right: 24rpx;
  }
}
