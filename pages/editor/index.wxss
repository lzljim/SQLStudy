/* pages/editor/index.wxss */

.scroll-container {
  height: 100vh;
  width: 100%;
}

.container {
  background: #f8f9fa;
  min-height: 100vh;
  /* 移除 min-height: 100vh，允许内容自然扩展 */
  padding-bottom: 120rpx;
}

/* 页面头部优化 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 32rpx 32rpx 32rpx;
  color: #fff;
}

.header-content {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  justify-content: space-between;
}

.header-title-group {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.page-title {
  font-size: 44rpx;
  font-weight: 800;
  letter-spacing: 2rpx;
  line-height: 1.1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.database-name {
  font-size: 24rpx;
  opacity: 0.85;
  margin-top: 6rpx;
  font-weight: 400;
}

.header-actions {
  display: flex;
  flex-direction: row;
  gap: 20rpx;
  align-items: center;
}

.header-btn {
  display: flex;
  align-items: center;
  padding: 12rpx 28rpx;
  font-size: 26rpx;
  background: rgba(255, 255, 255, 0.18);
  border: 1rpx solid rgba(255, 255, 255, 0.25);
  color: #fff;
  border-radius: 12rpx;
  font-weight: 500;
}

.header-btn .btn-icon {
  margin-right: 10rpx;
  font-size: 22rpx;
}

/* 表结构面板 */
.schema-panel {
  background: #fff;
  border-bottom: 1rpx solid #e9ecef;
  max-height: 400rpx;
  overflow: hidden;
}

.schema-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #e9ecef;
  background: #f8f9fa;
}

.schema-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.schema-close {
  font-size: 32rpx;
  color: #6c757d;
  cursor: pointer;
  padding: 8rpx;
}

.schema-content {
  max-height: 320rpx;
  padding: 0 32rpx;
}

.table-schema {
  margin-bottom: 32rpx;
}

.table-name {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  cursor: pointer;
  transition: all 0.2s ease;
}

.table-name:active {
  background: #f8f9fa;
  border-radius: 8rpx;
  padding-left: 16rpx;
}

.table-icon {
  font-size: 24rpx;
  margin-right: 12rpx;
}

.table-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #007aff;
  margin-right: 12rpx;
}

.insert-hint {
  font-size: 22rpx;
  color: #6c757d;
  opacity: 0.8;
}

.columns-list {
  margin-left: 36rpx;
}

.column-item {
  display: flex;
  align-items: center;
  padding: 8rpx 0;
  font-size: 24rpx;
}

.column-name {
  font-weight: 500;
  color: #333;
  margin-right: 16rpx;
  min-width: 120rpx;
}

.column-type {
  color: #6c757d;
  margin-right: 16rpx;
  font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
}

.column-constraints {
  display: flex;
  gap: 8rpx;
}

.constraint {
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  font-weight: 500;
}

.constraint.primary {
  background: #007aff;
  color: #fff;
}

.constraint.not-null {
  background: #ff9500;
  color: #fff;
}

/* 主要内容区域 */
.main-content {
  padding: 32rpx 0 0 0;
}

.editor-section,
.result-section {
  margin-bottom: 40rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  margin-right: 24rpx;
}

.section-actions {
  margin-left: auto;
}

.action-btn {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
}

.action-icon {
  margin-right: 6rpx;
  font-size: 18rpx;
}

/* 组件样式 */
.sql-editor-component {
  margin-bottom: 24rpx;
}

.result-viewer-component {
  min-height: 200rpx;
}

/* 快捷操作 */
.quick-actions {
  padding: 0 32rpx 40rpx;
}

.quick-actions-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.quick-actions-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.quick-action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 24rpx;
  background: #fff;
  border: 1rpx solid #e9ecef;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.quick-action-btn:active {
  transform: scale(0.98);
  background: #f8f9fa;
  border-color: #007aff;
}

.quick-action-icon {
  font-size: 32rpx;
  margin-bottom: 12rpx;
}

.quick-action-text {
  font-size: 26rpx;
  color: #333;
  text-align: center;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .header {
    padding: 24rpx;
  }
  
  .main-content {
    padding: 24rpx;
  }
  
  .quick-actions {
    padding: 0 24rpx 40rpx;
  }
  
  .quick-actions-grid {
    grid-template-columns: 1fr;
  }
  
  .schema-content {
    padding: 0 24rpx;
  }
}

/* 卡片样式 */
.card {
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 24rpx 0 rgba(0,0,0,0.06);
  padding: 32rpx 28rpx 36rpx 28rpx;
  margin-bottom: 40rpx;
}

.editor-card {
  margin-bottom: 40rpx;
}

.result-card {
  margin-bottom: 40rpx;
}

.card-header {
  justify-content: flex-start;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 24rpx;
}

.editor-body {
  margin-top: 12rpx;
}

.result-body {
  margin-top: 12rpx;
}

/* 顶部栏样式 */
.top-bar {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background: #7E57C2;
  height: 88rpx;
  padding: 0 24rpx;
  color: #fff;
  box-sizing: border-box;
}
.top-bar-left {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-weight: 600;
}
.top-bar-title {
  font-size: 32rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
  flex: 1;
  text-align: center;
  margin-left: 16rpx;
  margin-right: 16rpx;
}
.top-bar-actions {
  display: flex;
  align-items: center;
}
.icon-btn {
  background: transparent;
  border: none;
  color: #fff;
  font-size: 32rpx;
  padding: 8rpx;
  margin-left: 8rpx;
  border-radius: 8rpx;
}
.icon-btn:active,
.btn-hover {
  background: rgba(255,255,255,0.12);
}

/* 底部工具栏样式 */
.bottom-toolbar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  background: #fff;
  border-top: 1rpx solid #eee;
  padding: 8rpx 0;
  box-shadow: 0 -2rpx 12rpx rgba(126,87,194,0.06);
}
.toolbar-btn {
  flex: 1;
  background: none;
  border: none;
  color: #7E57C2;
  font-size: 28rpx;
  padding: 12rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.toolbar-btn .icon {
  font-size: 32rpx;
  margin-bottom: 2rpx;
}
.toolbar-btn.primary {
  color: #fff;
  background: linear-gradient(90deg, #7E57C2 60%, #9575CD 100%);
  border-radius: 24rpx;
  font-weight: 700;
  margin: 0 8rpx;
}
.toolbar-btn.danger {
  color: #EF5350;
}