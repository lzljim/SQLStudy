/* pages/editor/index.wxss */

.container {
  background: #f8f9fa;
  /* 移除 min-height: 100vh，允许内容自然扩展 */
}

/* 页面头部 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 32rpx;
  color: #fff;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-left {
  display: flex;
  flex-direction: column;
}

.page-title {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.database-name {
  font-size: 24rpx;
  opacity: 0.9;
}

.header-actions {
  display: flex;
  gap: 16rpx;
}

.header-btn {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  font-size: 24rpx;
  background: rgba(255, 255, 255, 0.2);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  color: #fff;
}

.header-btn .btn-icon {
  margin-right: 8rpx;
  font-size: 20rpx;
}

/* 表结构面板 */
.schema-panel {
  background: #fff;
  border-bottom: 1rpx solid #e9ecef;
  max-height: 400rpx;
  overflow: hidden;
}

.schema-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #e9ecef;
  background: #f8f9fa;
}

.schema-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.schema-close {
  font-size: 32rpx;
  color: #6c757d;
  cursor: pointer;
  padding: 8rpx;
}

.schema-content {
  max-height: 320rpx;
  padding: 0 32rpx;
}

.table-schema {
  margin-bottom: 32rpx;
}

.table-name {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  cursor: pointer;
  transition: all 0.2s ease;
}

.table-name:active {
  background: #f8f9fa;
  border-radius: 8rpx;
  padding-left: 16rpx;
}

.table-icon {
  font-size: 24rpx;
  margin-right: 12rpx;
}

.table-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #007aff;
  margin-right: 12rpx;
}

.insert-hint {
  font-size: 22rpx;
  color: #6c757d;
  opacity: 0.8;
}

.columns-list {
  margin-left: 36rpx;
}

.column-item {
  display: flex;
  align-items: center;
  padding: 8rpx 0;
  font-size: 24rpx;
}

.column-name {
  font-weight: 500;
  color: #333;
  margin-right: 16rpx;
  min-width: 120rpx;
}

.column-type {
  color: #6c757d;
  margin-right: 16rpx;
  font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
}

.column-constraints {
  display: flex;
  gap: 8rpx;
}

.constraint {
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  font-weight: 500;
}

.constraint.primary {
  background: #007aff;
  color: #fff;
}

.constraint.not-null {
  background: #ff9500;
  color: #fff;
}

/* 主要内容区域 */
.main-content {
  padding: 32rpx;
}

.editor-section,
.result-section {
  margin-bottom: 40rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.section-actions {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
}

.action-icon {
  margin-right: 6rpx;
  font-size: 18rpx;
}

/* 组件样式 */
.sql-editor-component {
  margin-bottom: 24rpx;
}

.result-viewer-component {
  min-height: 200rpx;
}

/* 快捷操作 */
.quick-actions {
  padding: 0 32rpx 40rpx;
}

.quick-actions-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.quick-actions-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.quick-action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 24rpx;
  background: #fff;
  border: 1rpx solid #e9ecef;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.quick-action-btn:active {
  transform: scale(0.98);
  background: #f8f9fa;
  border-color: #007aff;
}

.quick-action-icon {
  font-size: 32rpx;
  margin-bottom: 12rpx;
}

.quick-action-text {
  font-size: 26rpx;
  color: #333;
  text-align: center;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .header {
    padding: 24rpx;
  }
  
  .main-content {
    padding: 24rpx;
  }
  
  .quick-actions {
    padding: 0 24rpx 40rpx;
  }
  
  .quick-actions-grid {
    grid-template-columns: 1fr;
  }
  
  .schema-content {
    padding: 0 24rpx;
  }
}