/* pages/wasm-test/index.wxss */
.scroll-container {
  height: 100vh;
  width: 100%;
}

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: white;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 24rpx;
  color: #666;
}

.version-section {
  background: white;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.version-info {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.info-label {
  font-size: 28rpx;
  color: #666;
}

.info-value {
  font-size: 28rpx;
  font-weight: bold;
}

.info-value.success {
  color: #52c41a;
}

.info-value.error {
  color: #ff4d4f;
}

.status-section {
  background: white;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.status-item {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.status-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.status-value {
  font-size: 28rpx;
  font-weight: bold;
}

.status-value.success {
  color: #52c41a;
}

.status-value.error {
  color: #ff4d4f;
}

.loading {
  color: #1890ff;
  font-size: 28rpx;
}

.editor-section {
  background: white;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.sql-editor {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  border: 2rpx solid #d9d9d9;
  border-radius: 8rpx;
  font-family: 'Courier New', monospace;
  font-size: 28rpx;
  line-height: 1.5;
  background: #fafafa;
  margin-bottom: 20rpx;
}

.sql-editor:focus {
  border-color: #1890ff;
  background: white;
}

.button-group {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.btn {
  flex: 1;
  min-width: 150rpx;
  height: 80rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-primary {
  background: #1890ff;
  color: white;
}

.btn-primary:disabled {
  background: #d9d9d9;
  color: #999;
}

.btn-secondary {
  background: #f0f0f0;
  color: #333;
}

.btn-secondary:disabled {
  background: #f5f5f5;
  color: #999;
}

.error-section {
  background: #fff2f0;
  border: 2rpx solid #ffccc7;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

.error-message {
  color: #ff4d4f;
  font-size: 28rpx;
  line-height: 1.5;
}

.result-section {
  background: white;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.result-info {
  font-size: 24rpx;
  color: #666;
  font-weight: normal;
  margin-left: 20rpx;
}

.result-content {
  max-height: 600rpx;
  overflow-y: auto;
}

.result-table {
  margin-bottom: 30rpx;
}

.table-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  padding: 10rpx;
  background: #f8f9fa;
  border-radius: 6rpx;
}

.table-header {
  display: flex;
  background: #f8f9fa;
  border-bottom: 2rpx solid #e9ecef;
  font-weight: bold;
}

.header-cell {
  flex: 1;
  padding: 15rpx 10rpx;
  text-align: center;
  font-size: 26rpx;
  color: #333;
  border-right: 1rpx solid #e9ecef;
}

.header-cell:last-child {
  border-right: none;
}

.table-body {
  max-height: 400rpx;
  overflow-y: auto;
}

.table-row {
  display: flex;
  border-bottom: 1rpx solid #e9ecef;
}

.table-row:hover {
  background: #f8f9fa;
}

.table-cell {
  flex: 1;
  padding: 12rpx 10rpx;
  text-align: center;
  font-size: 26rpx;
  color: #333;
  border-right: 1rpx solid #e9ecef;
  word-break: break-all;
}

.table-cell:last-child {
  border-right: none;
}

.examples-section {
  background: white;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.example-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.example-item {
  padding: 15rpx;
  background: #f8f9fa;
  border: 1rpx solid #e9ecef;
  border-radius: 6rpx;
  font-size: 26rpx;
  color: #333;
  font-family: 'Courier New', monospace;
  cursor: pointer;
  transition: all 0.3s;
}

.example-item:hover {
  background: #e9ecef;
  border-color: #1890ff;
}

.example-item:active {
  background: #d9d9d9;
} 